extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    
    h1(class="mb-4") #{pageTitle}
    .card.mb-3 
        .card-header Danh sách ca sỹ
        .card-body 
            .row 
                .col-8
                .col-4 
                    a(
                        href=`${prefixAdmin}/singers/create`
                        class="btn btn-outline-success"
                    ) +Them mới

            table(
                class="table table-hover table-sm table-striped"
                checkbox-multi
                )
                    thead.thead-dark
                        tr
                            th STT
                            th Hình ảnh 
                            th Tên 
                            th Trạng thái
                            th Hành động
                    tbody 
                        each item, index in singers
                            tr  
                                td  #{index + 1}
                                td 
                                    img(src=item.avatar, alt=item.title, width="100px" height="auto")
                                td #{item.fullName}
                                td 
                                    if item.status === 'active'
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-success"
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-danger"
                                        ) Dừng hoạt động
                                td
                                    a(
                                        href=`${prefixAdmin}/singers/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết 
                                    a(
                                        href=`${prefixAdmin}/singers/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                    ) Sửa  
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa