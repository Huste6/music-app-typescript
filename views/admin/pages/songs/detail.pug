extends ../../layout/default.pug

block main 
    if(roles.permissions.includes("song-view"))
        .song-detail
            h1(class="mb-4") #{song.title}
            img(src=song.avatar alt=song.title class="song-avatar")
            p !{song.description}
            audio(controls src=song.audio)
            .lyrics
                h2 Lyrics
                pre 
                    | !{song.lyrics}
    else
        h1 Bạn không có quyền xem!
