extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
    if(roles.permissions.includes("accounts-user-view"))
        +alert-success(5000)
        h1(class="mb-4") Danh sách tài khoản user
        .card.mb-3 
            .card-header Danh sách
            .card-body 
                .row
                table(
                    class="table table-hover table-sm table-striped"
                    checkbox-multi
                )
                    thead.thead-dark
                        tr 
                            th STT
                            th Avatar 
                            th Họ tên
                            th Email
                            th Trạng thái
                            th Hành động
                    tbody 
                        each item, index in users
                            tr 
                                td #{index+1}
                                td 
                                    img(src=item.avatar, alt=item.fullname, width="100px" height="auto")
                                td #{item.fullname}
                                td #{item.email}
                                if(roles.permissions.includes("accounts-user-edit"))
                                        td 
                                            if item.status == "active"
                                                a(
                                                    href="javascript:;"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    button-change-status
                                                    class="badge badge-success"
                                                ) Hoạt động
                                            else
                                                a(
                                                    href="javascript:;"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    button-change-status
                                                    class="badge badge-danger"
                                                ) Dừng hoạt động
                                    else
                                        td 
                                            if item.status == "active"
                                                a(
                                                    href="javascript:;"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    class="badge badge-success"
                                                ) Hoạt động
                                            else
                                                a(
                                                    href="javascript:;"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    class="badge badge-danger"
                                                ) Dừng hoạt động
                                td  
                                    if(roles.permissions.includes("accounts-user-view"))
                                        a(
                                            href=`${prefixAdmin}/users/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                        ) Chi tiết
                                    if(roles.permissions.includes("accounts-user-delete"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            button-delete
                                            data-id=item.id
                                        ) Xóa
    else 
        h1 Bạn không có quyền!